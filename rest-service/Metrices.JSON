{
  "title": "Observability Dashboard",
  "uid": "obs-dashboard",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "cf4t92cfui134b" },
      "targets": [
        {
          "expr": "100 * avg(rate(process_cpu_seconds_total[1m])) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 70,
            "gradientMode": "scheme",
            "showPoints": "never"
          },
          "color": {
            "mode": "continuous-GrYlRd"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Requests per Second",
      "id": 2,
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "cf4t92cfui134b" },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "rps"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 60,
            "gradientMode": "opacity",
            "showPoints": "never"
          },
          "color": {
            "mode": "continuous-GrYlRd"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx)",
      "id": 3,
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "cf4t92cfui134b" },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"5..\"}[1m])",
          "legendFormat": "errors"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 50,
            "gradientMode": "opacity",
            "showPoints": "never"
          },
          "color": {
            "fixedColor": "red",
            "mode": "fixed"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Usage",
      "id": 4,
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "cf4t92cfui134b" },
      "targets": [
        {
          "expr": "(jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"}) * 100",
          "legendFormat": "heap %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 50,
            "gradientMode": "hue",
            "showPoints": "never"
          },
          "color": {
            "mode": "continuous-GrYlRd"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Queue Latency",
      "id": 5,
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "cf4t92cfui134b" },
      "targets": [
        {
          "expr": "rate(kafka_message_latency_ms_milliseconds_sum[1m]) / rate(kafka_message_latency_ms_milliseconds_count[1m])",
          "legendFormat": "avg latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 70,
            "gradientMode": "scheme",
            "showPoints": "never"
          },
          "color": {
            "mode": "continuous-GrYlRd"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    }
  ]
}